<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SampleController">
   <center>
      <BorderPane prefHeight="500.0" prefWidth="700.0" style="-fx-border-color: #000000;" BorderPane.alignment="CENTER">
         <left>
            <AnchorPane prefHeight="500.0" prefWidth="350.0" style="-fx-background-color: #00CC00;" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="133.0" layoutX="108.0" layoutY="113.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@controller3.png" />
                     </image>
                  </ImageView>
                  <Text fill="WHITE" layoutX="53.0" layoutY="278.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Game Management System">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Text>
               </children></AnchorPane>
         </left>
         <center>
            <AnchorPane prefHeight="500.0" prefWidth="350.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField fx:id="uname" layoutX="101.0" layoutY="191.0" onKeyPressed="#textLogin" promptText="Username" style="-fx-background-color: transparent; -fx-border-color: #00CC00; -fx-border-width: 0px 0px 2px 0px;" />
                  <PasswordField fx:id="pass" layoutX="101.0" layoutY="252.0" onKeyPressed="#textLogin" promptText="Password" style="-fx-background-color: transparent; -fx-border-color: #00CC00; -fx-border-width: 0px 0px 2px 0px;" />
                  <Button fx:id="loginKey" layoutX="129.0" layoutY="316.0" mnemonicParsing="false" onAction="#buttonLogin" prefHeight="39.0" prefWidth="93.0" style="-fx-background-color: #00CC00;" text="Login" />
                  <Hyperlink layoutX="117.0" layoutY="445.0" text="Forgot Password?" textFill="#00cc00" />
                  <ImageView fitHeight="84.0" fitWidth="83.0" layoutX="134.0" layoutY="48.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../Desktop/GUI/userLogin.png" />
                     </image>
                  </ImageView>
                  <Text fill="#00cc00" layoutX="125.0" layoutY="155.0" strokeType="OUTSIDE" strokeWidth="0.0" text="User Login">
                     <font>
                        <Font size="22.0" />
                     </font>
                  </Text>
                  <ImageView fitHeight="21.0" fitWidth="32.0" layoutX="68.0" layoutY="197.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@acountIcon.png" />
                     </image>
                  </ImageView>
                  <ImageView fitHeight="32.0" fitWidth="42.0" layoutX="63.0" layoutY="253.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@lock1.png" />
                     </image>
                  </ImageView>
                  <Button fx:id="closeButton" layoutX="294.0" layoutY="7.0" mnemonicParsing="false" onAction="#handleCloseButtonAction" style="-fx-background-color: transparent;">
                     <graphic>
                        <ImageView fitHeight="37.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@exit.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="minimizeButton" layoutX="269.0" layoutY="7.0" mnemonicParsing="false" onAction="#minimize" style="-fx-background-color: transparent;">
                     <graphic>
                        <ImageView fitHeight="18.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@underscore.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </AnchorPane>
         </center>
      </BorderPane>
   </center>
</BorderPane>
